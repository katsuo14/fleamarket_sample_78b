=render "items/header"
%main.mypage-contents.clearfix
  = render "users/mypage_side", locals: {user: @user}
  .main-content
    .content-wrapper
      .contents-title
        %h2
          登録カード情報
      .contents
        .card-info
          .__fields
            %label
              カード番号
            %p.__text
              %span.__frame
                ****
              %span.__frame
                ****
              %span.__frame
                ****
              %span.__frame
                = @card_info.last4
              -# = "**** **** **** " + @card_info.last4
          .__fields
            %label
              有効期限
            %p.__text
              %span.__frame
                = @card_info.exp_month.to_s
              %span
                月
              %span.__frame
                = @card_info.exp_year.to_s.slice(2,3)
              %span
                年
          .__btn
            = link_to "削除", credit_card_path(@card_info.id), method: :delete, class: "del-btn"
=render "items/footer"