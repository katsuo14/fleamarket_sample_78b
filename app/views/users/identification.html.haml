=render "items/header"
%main.mypage-contents.clearfix
  = render "mypage_side", locals: {user: @user}
  .main-content
    .content-wrapper
      .contents-title
        %h2 本人情報
      .contents
        .user-datas
          .user-data
            %label お名前
            .user-link
              %p.user-link__last_name
                = @user.last_name
              %p.user-link__first_name
                = @user.first_name
          .user-data
            %label お名前カナ
            .user-link
              %p.user-link__last_name_kana
                = @user.last_name_kana
              %p.user-link__first_name_kana
                = @user.first_name_kana
          .user-data
            %label ニックネーム
            .user-link
              %p.user-link__nickname
                = @user.nickname
          .user-data
            %label 生年月日
            .user-link
              %p.user-link__birth_date
                = @user.birth_date
=render "items/footer"
